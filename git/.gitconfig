[user]
	name = kang
	email = yi1115610574@gmail.com
	signingkey = 716B162E703DA80C
[color]
	ui = auto
[core]
	editor = nvim
    pager = delta
	quotepath = false
	excludesfile = ~/.gitignore-global
[help]
	autocorrect = 11
[interactive]
	diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false
[delta]
    line-numbers = true
    light = true
    navigate = true
    hyperlinks = true
[filter "api_key"]
	smudge = sed \"s/api_key.*/api_key =/\"
	clean = sed \"s/api_key.*/api_key =/\"
[commit]
	gpgsign = true
	verbose = true
[gpg]
	program = gpg
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[protocol]
	version = 2
[includeIf "gitdir:~/Projects/"]
    path = ~/.gitconfig-work
[diff]
	renames = true
    colorMoved = default
[push]
	autoSetupRemote = true
[alias]
	cleanup = !git branch --merged | grep -v '\\*\\|master\\|develop' | xargs git branch -d
[gc]
	auto = 0
[url "git@github.com:"]
	insteadOf = https://github.com/
